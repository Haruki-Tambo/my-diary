<div class="container-fluid mt-3">
    <div class="row">
        <div class="col-sm-9">
            <div class="card">
              <div class="card-header">
                  <div class="container">
                      <div class="row justify-content-between">
                        <div class="col-md-8">
                            <%= diary.title %>
                        </div>
                        <div class="col-md-4 text-right form-inline">
                          <a class="btn btn-outline-primary btn-sm" href="/diaries/<%= diary.id %>/edit">編集する</a>
                          <%= button_to "削除する", diary, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: "btn btn-outline-danger btn-sm ml-3" %>
                        </div>
                      </div>
                  </div>
              </div>
              <div class="card-body">
                <%= diary.content.gsub(/\r\n|\r|\n/, "<br>") %>
              </div>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="card">
              <div class="card-body mb-0 pl-0 pr-0 pt-1">
                <ul>
                    <% diaries.each do |diary|%>
                        <li><a href="/diaries/<%= diary.id %>"><%= diary.title %></a></li>
                    <% end %>
                </ul>
              </div>
            </div>
        </div>
    </div>
</div>